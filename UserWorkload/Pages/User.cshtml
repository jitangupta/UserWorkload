@page
@model UserWorkload.Pages.UserModel
@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

@if (!Model.IsAuthenticated)
{
    <div>
        <p>Please <a href="/Login">login</a> to view the user list.</p>
    </div>
}
else
{
    <a class="btn btn-primary mb-3" asp-page="/UserCreate">Create User</a>

    @if (Model.Users.Count == 0)
    {
        <p>No users found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Bio</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Bio</td>
                    <td>@user.CreatedAt.ToString("u")</td>
                </tr>
            }
            </tbody>
        </table>
    }
}
