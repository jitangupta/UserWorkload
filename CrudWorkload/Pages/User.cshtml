@page
@model UserWorkload.Pages.UserModel
@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

@if (Model.Users.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Bio</th>
                <th>Photo</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Bio</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.PhotoUrl))
                    {
                        <img src="@user.PhotoUrl" alt="Photo" width="50" />
                    }
                </td>
                <td>@user.CreatedAt.ToString("u")</td>
                <td>@user.UpdatedAt.ToString("u")</td>
            </tr>
        }
        </tbody>
    </table>
}
